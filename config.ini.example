[bridge]
type = bridge
children = node

[cluster]
impl = /opt/bohrium/libbh_vem_cluster.so
children = node
type = vem

[node]
impl = /opt/bohrium/libbh_vem_node.so
children = simple
type = vem

[print]
impl = /opt/bohrium/libbh_ve_print.so
type = ve

[naive]
impl = /opt/bohrium/libbh_ve_naive.so
type = ve

[simple]
impl = /opt/bohrium/libbh_ve_simple.so
type = ve

[dynamite]
impl = /opt/bohrium/libbh_ve_dynamite.so
type = ve
compiler_cmd="clang -lm -O3 -march=native -fPIC -std=c99 -x c -shared - -o "
#compiler_cmd="gcc -lm -O2 -march=native -fPIC -std=c99 -x c -shared - -o "
#compiler_cmd="gcc -lm -O3 -march=native -fPIC -std=c99 -x c -shared - -o "
#compiler_cmd="/opt/a64/bin/opencc -lm -O2 -fPIC -std=c99 -x c -shared - -o "
object_path=/opt/bohrium/dynamite/objects
kernel_path=/opt/bohrium/dynamite/kernels
snippet_path=/opt/bohrium/dynamite/snippets

[gpu]
impl = /opt/bohrium/libbh_ve_gpu.so
type = ve
ocldir = /opt/bohrium/lib/ocl_source

