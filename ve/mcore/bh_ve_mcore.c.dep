#include <bh.h>
#include "bh_ve_mcore.h"
#include "dispatch.h"
#include <assert.h>

static bh_component *myself = NULL;
static bh_userfunc_impl reduce_impl = NULL;
static bh_intp reduce_impl_id = 0;
static bh_userfunc_impl random_impl = NULL;
static bh_intp random_impl_id = 0;
static bh_intp nblocks = 16;

static bh_intp bh_ve_mcore_buffersizes = 0;
static bh_instruction** bh_ve_mcore_instruction_list = NULL;

bh_error bh_ve_mcore_init(bh_component *self)
{
    myself = self;
    char *env = getenv("BH_MCORE_NBLOCKS");
    if(env != NULL)
        nblocks = atoi(env);
    if(nblocks <= 0)
    {
        fprintf(stderr, "BH_MCORE_NBLOCKS should be greater than"
                        " zero!\n");
        return BH_ERROR;
    }
    //Initiate the dispatcher.
    dispatch_init();

    return BH_SUCCESS;
}

bh_error bh_ve_mcore_execute(

    bh_intp          instruction_count,
    bh_instruction*   instruction_list

) {
    bh_intp count=0;
    
    //Make sure we have enough space
    if (instruction_count > bh_ve_mcore_buffersizes) 
    {
    	bh_intp mcount = instruction_count;

    	//We only work in multiples of 1000
    	if (mcount % 1000 != 0)
    		mcount = (mcount + 1000) - (mcount % 1000);
    		
    	//Make sure we re-allocate on error
    	bh_ve_mcore_buffersizes = 0;
    	
    	if (bh_ve_mcore_instruction_list != NULL) {
    		free(bh_ve_mcore_instruction_list);
    		bh_ve_mcore_instruction_list = NULL;
    	}

    	bh_ve_mcore_instruction_list = (bh_instruction**)malloc(sizeof(bh_instruction*) * mcount);
    	
    	if (bh_ve_mcore_instruction_list == NULL)
    		return BH_OUT_OF_MEMORY;
    	
    	bh_ve_mcore_buffersizes = mcount;
    }

	bh_instruction** regular_inst = bh_ve_mcore_instruction_list;

    while(count < instruction_count)
    {
        bh_instruction* inst = &instruction_list[count];
        //Handle user-defined operations.
        if(inst->opcode == BH_USERFUNC)
        {
            if(inst->userfunc->id == reduce_impl_id)
            {
                inst->status = reduce_impl(inst->userfunc, NULL);
            }
            else if(inst->userfunc->id == random_impl_id)
            {
                inst->status = random_impl(inst->userfunc, NULL);
            }
            else// Unsupported instruction
            {
                inst->status = BH_TYPE_NOT_SUPPORTED;
            }
            ++count;
        }
        else if (inst->opcode == BH_FREE)
        {
			bh_data_free(inst->operand[0]);
			inst->status = BH_SUCCESS;
			++count;
        }

        //Gather regular operations.
        bh_intp regular_size=0;
        while(count < instruction_count)
        {
            inst = &instruction_list[count];
            if(inst->opcode == BH_USERFUNC || inst->opcode == BH_FREE)
                break;

            switch(inst->opcode)
            {
                case BH_NONE:
                case BH_DISCARD:
                case BH_SYNC:
                    break;
                default://This is a regular operation.
                    if(inst->status == BH_INST_PENDING)
                        regular_inst[regular_size++] = inst;
            }
            ++count;
        }
        //Dispatch the regular operations.
        bh_instruction** cur_bundle = regular_inst;
        while(regular_size > 0)
        {
            //Get number of consecutive bundeable instruction.
            //bh_intp bundle_size = bh_inst_bundle(cur_bundle, 0, regular_size-1);
            bh_intp bundle_size = 1;
            //Dispatch the bundle
            dispatch_bundle(cur_bundle, bundle_size, nblocks);
            //Iterate to next bundle.
            regular_size -= bundle_size;
            cur_bundle += bundle_size;
            assert(regular_size >= 0);
        }
    }

    return BH_SUCCESS;

}

bh_error bh_ve_mcore_shutdown( void )
{
    //Shutdown the dispatcher.
    dispatch_finalize();
    return BH_SUCCESS;

}

bh_error bh_ve_mcore_reg_func(char *fun, bh_intp *id) {

    if(strcmp("bh_reduce", fun) == 0)
    {
    	if (reduce_impl == NULL)
    	{
			bh_component_get_func(myself, fun, &reduce_impl);
			if (reduce_impl == NULL)
				return BH_USERFUNC_NOT_SUPPORTED;

			reduce_impl_id = *id;
			return BH_SUCCESS;			
        }
        else
        {
        	*id = reduce_impl_id;
        	return BH_SUCCESS;
        }
    }
    else if(strcmp("bh_random", fun) == 0)
    {
    	if (random_impl == NULL)
    	{
			bh_component_get_func(myself, fun, &random_impl);
			if (random_impl == NULL)
				return BH_USERFUNC_NOT_SUPPORTED;

			random_impl_id = *id;
			return BH_SUCCESS;			
        }
        else
        {
        	*id = random_impl_id;
        	return BH_SUCCESS;
        }
    }

    return BH_USERFUNC_NOT_SUPPORTED;
}

//Implementation of the user-defined funtion "reduce". Note that we
//follow the function signature defined by bh_userfunc_impl.
bh_error bh_reduce(bh_userfunc *arg, void* ve_arg)
{
    bh_reduce_type *a = (bh_reduce_type *) arg;
    bh_instruction tinst;
    bh_instruction *inst[1] = {&tinst};
    bh_error err;
    bh_intp i,j;
    bh_index coord[BH_MAXDIM];
    memset(coord, 0, a->operand[1]->ndim * sizeof(bh_index));

    if(bh_operands(a->opcode) != 3)
    {
        fprintf(stderr, "Reduce only support binary operations.\n");
        exit(-1);
    }

    //Make sure that the array memory is allocated.
    if(bh_data_malloc(a->operand[0]) != BH_SUCCESS ||
       bh_data_malloc(a->operand[1]) != BH_SUCCESS)
    {
        return BH_OUT_OF_MEMORY;
    }

    //We need a tmp copy of the arrays.
    bh_array *out = a->operand[0];
    bh_array *in  = a->operand[1];
    bh_array tmp  = *in;
    tmp.base = bh_base_array(in);
    bh_intp step = in->stride[a->axis];
    tmp.start = 0;
    j=0;
    for(i=0; i<in->ndim; ++i)//Remove the 'axis' dimension from in
        if(i != a->axis)
        {
            tmp.shape[j] = in->shape[i];
            tmp.stride[j] = in->stride[i];
            ++j;
        }
    --tmp.ndim;

    //We copy the first element to the output.
    inst[0]->status = BH_INST_PENDING;
    inst[0]->opcode = BH_IDENTITY;
    inst[0]->operand[0] = out;
    inst[0]->operand[1] = &tmp;
    err = dispatch_bundle(inst,1,1);
    if(err != BH_SUCCESS)
        return err;
    tmp.start += step;

    //Reduce over the 'axis' dimension.
    //NB: the first element is already handled.
    inst[0]->status = BH_INST_PENDING;
    inst[0]->opcode = a->opcode;
    inst[0]->operand[0] = out;
    inst[0]->operand[1] = out;
    inst[0]->operand[2] = &tmp;
    bh_intp axis_size = in->shape[a->axis];

    for(i=1; i<axis_size; ++i)
    {
        //One block per thread.
        err = dispatch_bundle(inst,1,1);
        if(err != BH_SUCCESS)
            return err;
        tmp.start += step;
    }

    return BH_SUCCESS;
}
